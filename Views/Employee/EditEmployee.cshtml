@model Project_C.ViewModels.EmployeeCreateModel
@{

    ViewData["Title"] = "Edit Employee";
}

<h1>Bewerk - @Model.Username's Account</h1>

<style>
    * {
        box-sizing: border-box;
    }

    .row {
        margin-left: -5px;
        margin-right: -5px;
    }

    .column {
        float: left;
        width: 50%;
        padding: 5px;
    }

    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
        border-collapse: collapse;
    top: 150px;
    left: 120px;
    position: absolute;
    margin: 12px 0;
    border-spacing: 2px;
    border-radius: 12px 12px 0 0;
    box-shadow: 0 2px 12px rgba(32,32,32,.5);
    background: white;
    border-spacing: 20px;

    }

    td, tr {
        width: 10px;
        height: 60px;
    }

    .table {
        width: 1600px;
        border-spacing: 20px;
    }

    thead {
        font-size: 23px;
        background-color: #deae62;
        color: #ffffff;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

        .table tbody tr:nth-of-type(even) {
            background-color: #f3f3f3;
        }

        .table tbody tr:last-of-type {
            border-bottom: 8px solid #deae62;
        }

    .PropertyName {
        font-family: Arial;
        font-size: 25px;
    }

    .DetailInfo {
        font-family: Arial;
        font-size: 18px;
    }

    h1 {
        position: absolute;
        left: 700px;
        top: 60px;
        font-family: 'Times New Roman';
    }
    .btn.btn-bewerk {
    position: absolute;
    height: 40px;
    width: 160px;
    right: 950px;
    top: 100px;
    background: rgba(0, 100, 200);
    border: 0px #f8dd85;
    color: black;
    text-align: center;
    place-content: center;
    place-content: center;
    align-items: center;
    font-size: 22px;
    border-radius: 0px;
    cursor: pointer;
    line-height: 35px;
    transition: .5s;
    font-size: medium;
    border: 0;
    box-shadow: #ffffff 0 -25px 18px -14px inset,rgba(4, 187, 99, .15) 0 1px 1px,#f3f3f3 0 2px 4px,black 0 4px 8px,#f3f3f3 0 8px 16px,rgba(44, 187, 99, .15) 0 16px 32px;
        }
    .btn.btn-terug

    {
        position: absolute;
        height: 40px;
        width: 100px;
        right: 820px;
        top: 110px;
        background: rgba(200, 20, 0);
        border: 0px #f8dd85;
        color: black;
        text-align: center;
        place-content: center;
        place-content: center;
        align-items: center;
        font-size: 22px;
        border-radius: 0px;
        cursor: pointer;
        line-height: 35px;
        transition: .5s;
        font-size: medium;
        border: 0;
        box-shadow: #ffffff 0 -25px 18px -14px inset,rgba(4, 187, 99, .15) 0 1px 1px,#f3f3f3 0 2px 1px,black 0 4px 8px,#f3f3f3 0 8px 16px,rgba(44, 187, 99, .15) 0 16px 32px;
    }
</style>


<div class="row">
    <form method="post" enctype="multipart/form-data" asp-action="EditEmployee" asp-controller="Employee">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="column">
            <table class="table">
                <thead>
                    <tr>
                        <th><h2>Details</h2></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="PropertyName">Gebruikersnaam</td>
                    </tr>
                    <tr>
                        <td class="DetailInfo">
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="PropertyName">
                            Wachtwoord
                        </td>
                    </tr>
                    <tr>
                        <td class="DetailInfo">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="PropertyName">
                            E-mail
                        </td>
                    </tr>
                    <tr>
                        <td class="DetailInfo">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="PropertyName">
                            Rol
                        </td>
                    </tr>
                    <tr>
                        <td class="DetailInfo">
                            <select asp-for=IsAdmin type="text" class="form-control" />
                            <option value="Administrator">Administrator</option>
                            <option value="Medewerker">Medewerker</option>
                            <span asp-validation-for="IsAdmin" class="text-danger"></span>
                        </td>
                    </tr>


                </tbody>
            </table>
            <input type="submit" value="Bijwerken voltooien" class="btn btn-bewerk" />
            <a class="btn btn-terug" asp-controller="Employee" asp-action="EmployeeIndex">Terug</a>
        </div>

    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
