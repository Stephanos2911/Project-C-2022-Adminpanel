@model AdminApplication.ViewModels.StoreCreateViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create new product for Database</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="AddStore" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="name of Store" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteLink" class="control-label"></label>
                <input asp-for="SiteLink" class="form-control" />
                <span asp-validation-for="SiteLink" class="text-danger"></span>
            </div>


            <label class="control-label">Upload Store Logo</label>
            <div class="input-group mb-1">
                <div class="custom-file">
                    <input asp-for="LogoFile" class="form-control custom-file-input" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Store" class="btn btn-primary" />
                <a class="btn btn-primary" asp-controller="Home" asp-action="StoreIndex">Back </a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
