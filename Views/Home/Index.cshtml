@model IEnumerable<Project_C.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>


<a asp-controller="Home" asp-action="Create"><input class="btn btn-primary" value="Add new Product" /></a>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <td>
                    <form asp-action="View">
                        <div class="form-group">
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">View</a>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
