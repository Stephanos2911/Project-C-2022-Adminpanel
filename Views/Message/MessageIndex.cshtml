@model IEnumerable<Project_C.Models.Message>

@{
    ViewData["Title"] = "Index";

}

<h1>Berichten</h1>


<table class="table">
    <thead>
        <tr>
            <th style="width:20%">
                Zender
            </th>
            <th style="width:20%">
                Telefoon-Nummer
            </th>
            <th style="width:20%">
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var ModeltoList = Model.ToList();
            for (int i = 0; i < ModeltoList.Count; i++)
            {
                <tr>
                    <td>
                        @ModeltoList[i].NameOfSender
                    </td>
                    <td>
                        @ModeltoList[i].PhoneNumber
                    </td>
                    <td>
                        @{
                            if (ModeltoList[i].IsAnswered)
                            {
                                <img src="~/images/greencheckmark.png" width="40" height="40">
                            }
                            else
                            {
                                <img src="~/images/redcheckmark.png" width="40" height="40">
                            }
                        }
                    </td>
                    <td>
                        <form asp-action="View">
                            <div class="btn-group">
                                <a class="btn btn-primary" asp-action="MessageDetails" asp-route-id="@ModeltoList[i].Id">Bekijk</a>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
