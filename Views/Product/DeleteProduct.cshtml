@model Project_C.Models.ProductModels.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h4>Weet je zeker dat je "@Html.DisplayFor(model => model.Name)" wilt verwijderen?</h4>


<form asp-action="DeleteProduct">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Verwijder" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="ProductDetails" asp-route-id="@Model.Id">Terug</a>
</form>
