@model Project_C.Models.ProductModels.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h4>Are you sure you want to delete "@Html.DisplayFor(model => model.Name)"?</h4>


<form asp-action="DeleteProduct">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="ProductDetails" asp-route-id="@Model.Id">Back</a>
</form>
