@model AdminApplication.ViewModels.StoreEditViewModel
@{

    ViewData["Title"] = "Edit Store";
}

<h1>Edit</h1>

<h4>Product</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStore" asp-controller="Store" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingPhotoPath" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SiteLink" class="control-label"></label>
                <input asp-for="SiteLink" class="form-control" placeholder="Link to Store Website" />
                <span asp-validation-for="SiteLink" class="text-danger"></span>
            </div>


            <label class="control-label">Upload Store Picture</label>
            <div class="input-group mb-1">
                <div class="custom-file">
                    <input asp-for="LogoFile" class="form-control custom-file-input" />
                    <span asp-validation-for="LogoFile" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
                <a class="btn btn-primary" asp-controller="Store" asp-action="StoreIndex">Back </a>
            </div>
        </form>

    </div>
</div>