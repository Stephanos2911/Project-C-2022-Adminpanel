@model Project_C.Models.StoreModels.Store

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/StoreLogos/" + Model.LogoPath;
}


<h1>Details</h1>
<div class="navbar-nav-scroll">
    <div class="divTableBody">
        <div class="divTableRow">
            <h4>Name</h4>
            <div class="divTableCell">&nbsp;  @Html.DisplayFor(model => model.Name)</div>
        </div>
        <div class="divTableRow">
            <h4>Description</h4>
            <div class="divTableCell">&nbsp; @Html.DisplayFor(model => model.SiteLink)</div>
        </div>

        <h2>Content</h2>

        <div class="divTableRow">
            <h4>Product Picture</h4>
            <div class="divTableCell">&nbsp; Photo</div>
            <div class="divTableCell">
                &nbsp;
                <img class="img-fluid" src="@photoPath" asp-append-version="true" style="width:30%" />
            </div>
        </div>

        <div>
            <form>
                <div class="form-group">
                    <a class="btn btn-danger" asp-action="DeleteStore" asp-route-id="@Model.Id">Delete</a>
                    <a class="btn btn-primary" asp-action="EditStore" asp-route-id="@Model.Id">Edit</a>
                </div>
            </form>

        </div>
    </div>
</div>


